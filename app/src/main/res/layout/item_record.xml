<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_item_record"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_record_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="12dp"
            android:textColor="@color/bg_black"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:background="@color/bg_black"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_item_record_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="12dp"
            android:textColor="@color/bg_black"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:background="@color/bg_black"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_item_record_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="12dp"
            android:textColor="@color/bg_black"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:background="@color/bg_black"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_item_record_temp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="12dp"
            android:textColor="@color/bg_black"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:background="@color/bg_black"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/btn_item_record_delete"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:background="@drawable/delete_rect"
            android:textSize="11dp"
            android:text="删除"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_black"
        android:layout_below="@+id/ll_item_record"/>
</RelativeLayout>
